    <script>
        // Airtable configuration
        let config = {
            token: '',
            baseId: '',
            connected: false
        };

        // Data storage
        let customers = [];
        let jobs = [];
        let recurringJobs = [];
        let editingCustomerId = null;
        let editingJobId = null;
        let editingRecurringId = null;

        // Airtable API functions
        async function makeAirtableRequest(method, endpoint, data = null) {
            const url = `https://api.airtable.com/v0/${config.baseId}/${endpoint}`;
            
            const options = {
                method: method,
                headers: {
                    'Authorization': `Bearer ${config.token}`,
                    'Content-Type': 'application/json'
                }
            };

            if (data) {
                options.body = JSON.stringify(data);
            }

            try {
                const response = await fetch(url, options);
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                return await response.json();
            } catch (error) {
                console.error('Airtable API Error:', error);
                showError(`API Error: ${error.message}`);
                throw error;
            }
        }

        async function testConnection() {
            const token = document.getElementById('apiToken').value.trim();
            const baseId = document.getElementById('baseId').value.trim();

            if (!token || !baseId) {
                showError('Please enter both API token and Base ID');
                return;
            }

            try {
                showLoading('Testing connection...');
                
                config.token = token;
                config.baseId = baseId;

                // Test connection by fetching customers
                await makeAirtableRequest('GET', 'Customers?maxRecords=1');
                
                config.connected = true;
                updateConnectionStatus(true);
                enableTabs();
                hideMessage();
                saveConfig();
                
                // Load initial data
                await loadAllData();
                showTab('dashboard');
                
                showSuccess('Connected to Airtable successfully!');
            } catch (error) {
                config.connected = false;
                updateConnectionStatus(false);
                showError('Connection failed. Please check your API token and Base ID.');
            }
        }

        function updateConnectionStatus(connected) {
            const status = document.getElementById('connectionStatus');
            if (connected) {
                status.textContent = 'Connected';
                status.className = 'connection-status status-connected';
            } else {
                status.textContent = 'Not Connected';
                status.className = 'connection-status status-disconnected';
            }
        }

        function enableTabs() {
            const tabs = ['dashboardTab', 'customersTab', 'jobsTab', 'recurringTab'];
            tabs.forEach(tabId => {
                document.getElementById(tabId).disabled = false;
            });
        }

        function showLoading(message) {
            const connectionMessage = document.getElementById('connectionMessage');
            connectionMessage.innerHTML = message;
            connectionMessage.classList.remove('hidden');
            connectionMessage.classList.add('loading');
        }

        function hideMessage() {
            document.getElementById('connectionMessage').classList.add('hidden');
        }

        function showError(message) {
            hideMessage();
            const existing = document.querySelector('.error-message');
            if (existing) existing.remove();
            
            const error = document.createElement('div');
            error.className = 'error-message';
            error.textContent = message;
            document.querySelector('.content').prepend(error);
            
            setTimeout(() => error.remove(), 5000);
        }

        function showSuccess(message) {
            const existing = document.querySelector('.success-message');
            if (existing) existing.remove();
            
            const success = document.createElement('div');
            success.className = 'success-message';
            success.textContent = message;
            document.querySelector('.content').prepend(success);
            
            setTimeout(() => success.remove(), 3000);
        }

        // Data loading functions
        async function loadAllData() {
            try {
                await Promise.all([
                    loadCustomers(),
                    loadJobs(),
                    loadRecurringJobs()
                ]);
                updateDashboard();
                updateCustomerDropdowns();
            } catch (error) {
                showError('Failed to load data from Airtable');
            }
        }

        async function loadCustomers() {
            try {
                const response = await makeAirtableRequest('GET', 'Customers');
                customers = response.records.map(record => ({
                    id: record.id,
                    name: record.fields.Name || '',
                    email: record.fields.Email || '',
                    phone: record.fields.Phone || '',
                    address: record.fields.Address || '',
                    notes: record.fields.Notes || ''
                }));
                displayCustomers();
            } catch (error) {
                console.error('Failed to load customers:', error);
            }
        }

        async function loadJobs() {
            try {
                const response = await makeAirtableRequest('GET', 'Jobs');
                jobs = response.records.map(record => ({
                    id: record.id,
                    customerId: record.fields.Customer ? record.fields.Customer[0] : null,
                    title: record.fields.Title || '',
                    date: record.fields.Date || '',
                    status: record.fields.Status || 'Planned',
                    value: record.fields.Value || 0,
                    duration: record.fields.Duration || 0,
                    description: record.fields.Description || '',
                    notes: record.fields.Notes || ''
                }));
                displayJobs();
            } catch (error) {
                console.error('Failed to load jobs:', error);
            }
        }

        async function loadRecurringJobs() {
            try {
                const response = await makeAirtableRequest('GET', 'Recurring%20Jobs');
                recurringJobs = response.records.map(record => ({
                    id: record.id,
                    customerId: record.fields.Customer ? record.fields.Customer[0] : null,
                    title: record.fields.Title || '',
                    frequency: record.fields.Frequency || '',
                    startDate: record.fields['Start Date'] || '',
                    nextDue: record.fields['Next Due'] || '',
                    value: record.fields.Value || 0,
                    duration: record.fields.Duration || 0,
                    description: record.fields.Description || ''
                }));
                displayRecurringJobs();
            } catch (error) {
                console.error('Failed to load recurring jobs:', error);
            }
        }

        // Tab management
        function showTab(tabName) {
            if (!config.connected) return;
            
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.add('hidden');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab content
            document.getElementById(tabName).classList.remove('hidden');
            
            // Add active class to clicked tab
            document.querySelector(`#${tabName}Tab`).classList.add('active');
        }

        // Customer management
        document.getElementById('customerForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const button = document.getElementById('saveCustomerBtn');
            button.disabled = true;
            button.textContent = 'Saving...';

            try {
                const customerData = {
                    fields: {
                        'Name': document.getElementById('customerName').value,
                        'Email': document.getElementById('customerEmail').value,
                        'Phone': document.getElementById('customerPhone').value,
                        'Address': document.getElementById('customerAddress').value,
                        'Notes': document.getElementById('customerNotes').value
                    }
                };

                if (editingCustomerId) {
                    await makeAirtableRequest('PATCH', `Customers/${editingCustomerId}`, customerData);
                    showSuccess('Customer updated successfully!');
                } else {
                    await makeAirtableRequest('POST', 'Customers', customerData);
                    showSuccess('Customer added successfully!');
                }

                clearCustomerForm();
                await loadCustomers();
                updateCustomerDropdowns();
                updateDashboard();
            } catch (error) {
                showError('Failed to save customer');
            } finally {
                button.disabled = false;
                button.textContent = editingCustomerId ? 'Update Customer' : 'Add Customer';
            }
        });

        function clearCustomerForm() {
            document.getElementById('customerForm').reset();
            editingCustomerId = null;
            document.getElementById('saveCustomerBtn').textContent = 'Add Customer';
        }

        async function editCustomer(id) {
            const customer = customers.find(c => c.id === id);
            if (customer) {
                document.getElementById('customerName').value = customer.name;
                document.getElementById('customerEmail').value = customer.email;
                document.getElementById('customerPhone').value = customer.phone;
                document.getElementById('customerAddress').value = customer.address;
                document.getElementById('customerNotes').value = customer.notes;
                editingCustomerId = id;
                document.getElementById('saveCustomerBtn').textContent = 'Update Customer';
            }
        }

        async function deleteCustomer(id) {
            if (confirm('Are you sure you want to delete this customer?')) {
                try {
                    await makeAirtableRequest('DELETE', `Customers/${id}`);
                    showSuccess('Customer deleted successfully!');
                    await loadCustomers();
                    updateCustomerDropdowns();
                    updateDashboard();
                } catch (error) {
                    showError('Failed to delete customer');
                }
            }
        }

        function displayCustomers() {
            const tbody = document.getElementById('customersTable');
            tbody.innerHTML = '';

            customers.forEach(customer => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${customer.name}</td>
                    <td>${customer.email || '-'}</td>
                    <td>${customer.phone || '-'}</td>
                    <td>${customer.address || '-'}</td>
                    <td>
                        <button class="action-btn" onclick="editCustomer('${customer.id}')">Edit</button>
                        <button class="action-btn btn-danger" onclick="deleteCustomer('${customer.id}')">Delete</button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        // Job management
        document.getElementById('jobForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const button = document.getElementById('saveJobBtn');
            button.disabled = true;
            button.textContent = 'Saving...';

            try {
                const jobData = {
                    fields: {
                        'Customer': [document.getElementById('jobCustomer').value],
                        'Title': document.getElementById('jobTitle').value,
                        'Date': document.getElementById('jobDate').value || undefined,
                        'Status': document.getElementById('jobStatus').value,
                        'Value': parseFloat(document.getElementById('jobValue').value) || 0,
                        'Duration': parseFloat(document.getElementById('jobDuration').value) || 0,
                        'Description': document.getElementById('jobDescription').value,
                        'Notes': document.getElementById('jobNotes').value
                    }
                };

                if (editingJobId) {
                    await makeAirtableRequest('PATCH', `Jobs/${editingJobId}`, jobData);
                    showSuccess('Job updated successfully!');
                } else {
                    await makeAirtableRequest('POST', 'Jobs', jobData);
                    showSuccess('Job added successfully!');
                }

                clearJobForm();
                await loadJobs();
                updateDashboard();
            } catch (error) {
                showError('Failed to save job');
            } finally {
                button.disabled = false;
                button.textContent = editingJobId ? 'Update Job' : 'Add Job';
            }
        });

        function clearJobForm() {
            document.getElementById('jobForm').reset();
            editingJobId = null;
            document.getElementById('saveJobBtn').textContent = 'Add Job';
        }

        async function editJob(id) {
            const job = jobs.find(j => j.id === id);
            if (job) {
                document.getElementById('jobCustomer').value = job.customerId;
                document.getElementById('jobTitle').value = job.title;
                document.getElementById('jobDate').value = job.date;
                document.getElementById('jobStatus').value = job.status;
                document.getElementById('jobValue').value = job.value;
                document.getElementById('jobDuration').value = job.duration;
                document.getElementById('jobDescription').value = job.description;
                document.getElementById('jobNotes').value = job.notes;
                editingJobId = id;
                document.getElementById('saveJobBtn').textContent = 'Update Job';
            }
        }

        async function deleteJob(id) {
            if (confirm('Are you sure you want to delete this job?')) {
                try {
                    await makeAirtableRequest('DELETE', `Jobs/${id}`);
                    showSuccess('Job deleted successfully!');
                    await loadJobs();
                    updateDashboard();
                } catch (error) {
                    showError('Failed to delete job');
                }
            }
        }

        function displayJobs() {
            const tbody = document.getElementById('jobsTable');
            tbody.innerHTML = '';

            jobs.forEach(job => {
                const customer = customers.find(c => c.id === job.customerId);
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${customer ? customer.name : 'Unknown'}</td>
                    <td>${job.title}</td>
                    <td>${job.date || '-'}</td>
                    <td><span class="status status-${job.status.toLowerCase().replace(' ', '-')}">${job.status}</span></td>
                    <td>£${job.value.toFixed(2)}</td>
                    <td>
                        <button class="action-btn" onclick="editJob('${job.id}')">Edit</button>
                        <button class="action-btn btn-danger" onclick="deleteJob('${job.id}')">Delete</button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        // Recurring jobs management
        document.getElementById('recurringForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const button = document.getElementById('saveRecurringBtn');
            button.disabled = true;
            button.textContent = 'Saving...';

            try {
                const startDate = document.getElementById('recurringStartDate').value;
                const frequency = document.getElementById('recurringFrequency').value;
                const nextDue = calculateNextDue(startDate, frequency);

                const recurringData = {
                    fields: {
                        'Customer': [document.getElementById('recurringCustomer').value],
                        'Title': document.getElementById('recurringTitle').value,
                        'Frequency': frequency,
                        'Start Date': startDate || undefined,
                        'Next Due': nextDue,
                        'Value': parseFloat(document.getElementById('recurringValue').value) || 0,
                        'Duration': parseFloat(document.getElementById('recurringDuration').value) || 0,
                        'Description': document.getElementById('recurringDescription').value
                    }
                };

                if (editingRecurringId) {
                    await makeAirtableRequest('PATCH', `Recurring%20Jobs/${editingRecurringId}`, recurringData);
                    showSuccess('Recurring job updated successfully!');
                } else {
                    await makeAirtableRequest('POST', 'Recurring%20Jobs', recurringData);
                    showSuccess('Recurring job created successfully!');
                }

                clearRecurringForm();
                await loadRecurringJobs();
                updateDashboard();
            } catch (error) {
                showError('Failed to save recurring job');
            } finally {
                button.disabled = false;
                button.textContent = editingRecurringId ? 'Update Recurring Job' : 'Create Recurring Job';
            }
        });

        function clearRecurringForm() {
            document.getElementById('recurringForm').reset();
            editingRecurringId = null;
            document.getElementById('saveRecurringBtn').textContent = 'Create Recurring Job';
        }

        function calculateNextDue(startDate, frequency) {
            if (!startDate) return '';
            
            const start = new Date(startDate);
            const today = new Date();
            let nextDue = new Date(start);

            while (nextDue <= today) {
                switch (frequency) {
                    case 'Weekly':
                        nextDue.setDate(nextDue.getDate() + 7);
                        break;
                    case 'Bi-weekly':
                        nextDue.setDate(nextDue.getDate() + 14);
                        break;
                    case 'Monthly':
                        nextDue.setMonth(nextDue.getMonth() + 1);
                        break;
                    case 'Quarterly':
                        nextDue.setMonth(nextDue.getMonth() + 3);
                        break;
                    case 'Yearly':
                        nextDue.setFullYear(nextDue.getFullYear() + 1);
                        break;
                }
            }

            return nextDue.toISOString().split('T')[0];
        }

        async function generateRecurringJob(recurringId) {
            const recurring = recurringJobs.find(r => r.id === recurringId);
            if (!recurring) return;

            try {
                const newJobData = {
                    fields: {
                        'Customer': [recurring.customerId],
                        'Title': recurring.title,
                        'Date': recurring.nextDue,
                        'Status': 'Planned',
                        'Value': recurring.value,
                        'Duration': recurring.duration,
                        'Description': recurring.description,
                        'Notes': 'Generated from recurring job'
                    }
                };

                await makeAirtableRequest('POST', 'Jobs', newJobData);

                // Update next due date
                const newNextDue = calculateNextDue(recurring.nextDue, recurring.frequency);
                const updateData = {
                    fields: {
                        'Next Due': newNextDue
                    }
                };

                await makeAirtableRequest('PATCH', `Recurring%20Jobs/${recurringId}`, updateData);

                showSuccess('Job generated successfully!');
                await loadJobs();
                await loadRecurringJobs();
                updateDashboard();
            } catch (error) {
                showError('Failed to generate job');
            }
        }

        async function deleteRecurringJob(id) {
            if (confirm('Are you sure you want to delete this recurring job?')) {
                try {
                    await makeAirtableRequest('DELETE', `Recurring%20Jobs/${id}`);
                    showSuccess('Recurring job deleted successfully!');
                    await loadRecurringJobs();
                    updateDashboard();
                } catch (error) {
                    showError('Failed to delete recurring job');
                }
            }
        }

        function displayRecurringJobs() {
            const tbody = document.getElementById('recurringTable');
            tbody.innerHTML = '';

            recurringJobs.forEach(recurring => {
                const customer = customers.find(c => c.id === recurring.customerId);
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${customer ? customer.name : 'Unknown'}</td>
                    <td>${recurring.title} <span class="recurring-badge">RECURRING</span></td>
                    <td>${recurring.frequency}</td>
                    <td>${recurring.nextDue}</td>
                    <td>£${recurring.value.toFixed(2)}</td>
                    <td>
                        <button class="action-btn" onclick="generateRecurringJob('${recurring.id}')">Generate Job</button>
                        <button class="action-btn btn-danger" onclick="deleteRecurringJob('${recurring.id}')">Delete</button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        // Dashboard updates
        function updateDashboard() {
            document.getElementById('totalCustomers').textContent = customers.length;
            document.getElementById('totalJobs').textContent = jobs.length;
            document.getElementById('completedJobs').textContent = jobs.filter(j => j.status === 'Completed').length;
            document.getElementById('recurringJobs').textContent = recurringJobs.length;

            // Update recent jobs table
            const recentJobs = jobs.slice(-5).reverse();
            const tbody = document.getElementById('recentJobsTable');
            tbody.innerHTML = '';

            recentJobs.forEach(job => {
                const customer = customers.find(c => c.id === job.customerId);
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${customer ? customer.name : 'Unknown'}</td>
                    <td>${job.title}</td>
                    <td>${job.date || '-'}</td>
                    <td><span class="status status-${job.status.toLowerCase().replace(' ', '-')}">${job.status}</span></td>
                    <td>£${job.value.toFixed(2)}</td>
                `;
                tbody.appendChild(row);
            });
        }

        function updateCustomerDropdowns() {
            const selects = [document.getElementById('jobCustomer'), document.getElementById('recurringCustomer')];
            
            selects.forEach(select => {
                const currentValue = select.value;
                select.innerHTML = '<option value="">Select Customer</option>';
                
                customers.forEach(customer => {
                    const option = document.createElement('option');
                    option.value = customer.id;
                    option.textContent = customer.name;
                    select.appendChild(option);
                });
                
                select.value = currentValue;
            });
        }

        // Load saved config on page load
        window.addEventListener('load', function() {
            const savedToken = localStorage.getItem('airtable_token');
            const savedBaseId = localStorage.getItem('airtable_base_id');
            
            if (savedToken && savedBaseId) {
                document.getElementById('apiToken').value = savedToken;
                document.getElementById('baseId').value = savedBaseId;
            }
        });

    </script>
</body>
</html>
